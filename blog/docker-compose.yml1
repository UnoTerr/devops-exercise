version: '3'
services:
  db:
    image: 'postgres:latest'
    ports:
      - "5432:5432"
    env_file:
      - .env

  web:
    build: .
    command: bin/rails server --port 3000 --binding 0.0.0.0
    ports:
      - "3000:3000"
    links:
      - db
    env_file:
    - .env
    volumes:
      - .:/app
